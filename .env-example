# Slack Bot Configuration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_APP_TOKEN=xapp-your-slack-app-token-here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Google Docs Configuration
GOOGLE_DRIVE_FOLDER_ID=your-google-drive-folder-id-here  # Folder containing multiple documents
GOOGLE_CREDENTIALS_PATH=./credentials.json

# OpenAI/OpenRouter Configuration
# For OpenAI: use your OpenAI API key and leave OPENAI_BASE_URL empty or unset
# For OpenRouter: use your OpenRouter API key and set OPENAI_BASE_URL to https://openrouter.ai/api/v1
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_BASE_URL=  # Optional: Set to https://openrouter.ai/api/v1 for OpenRouter
OPENAI_MODEL=gpt-4  # Model to use (e.g., gpt-4, gpt-3.5-turbo, anthropic/claude-3-opus, etc.)

# Updater Service Settings
CHAR_THRESHOLD=10000
CHROMA_DB_PATH=./chroma_db
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_USE_HTTP=false

# MongoDB Configuration (for version storage)
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=epimetheus
MONGODB_USERNAME=  # Optional: MongoDB username (leave empty for no auth)
MONGODB_PASSWORD=  # Optional: MongoDB password (leave empty for no auth)

# Docker-specific settings (when using docker-compose)
# These are automatically set in docker-compose.yml, but for reference:
